{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es5",
		"allowJs": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"react": ["./node_modules/@types/react"]
		}
	},
	"typeRoots": ["node_modules/@types", "./types"],
	"include": ["./src/**/*", "./types/**/*", "./types.d.ts"]
}
