{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./build/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noEmit": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es5",
		"allowJs": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"react": ["./node_modules/@types/react"],
			"@/app/*": ["app/*"],
			"@/shared/*": ["shared/*"],
			"@/widgets/*": ["widgets/*"]
		},
		"lib": ["ES2021.String"]
	},
	"typeRoots": ["node_modules/@types", "./types"],
	"include": ["./src/**/*", "./types/**/*"]
}
