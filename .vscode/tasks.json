{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "zip: create zip from theme folder",
			"command": "zip -R ${workspaceFolderBasename}.zip * -X 'node_modules/*' '${workspaceFolderBasename}.code-workspace' '.vscode/*'.zip",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"close": true
			}
		}
	]
}
