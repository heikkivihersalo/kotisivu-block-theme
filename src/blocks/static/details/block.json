{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 3,
	"name": "ksd/details",
	"title": "Details",
	"category": "containers",
	"icon": "layout",
	"description": "",
	"keywords": ["container, details"],
	"textdomain": "kotisivu-block-theme",
	"supports": {
		"className": false,
		"html": true,
		"color": {
			"text": false,
			"background": true
		},
		"spacing": {
			"margin": ["top", "bottom"],
			"padding": true
		}
	},
	"editorScript": "file:../../../../assets/js/blocks/details.js",
	"editorStyle": "file:../../../../assets/css/blocks/details.css",
	"style": "file:../../../../assets/css/blocks/style-details.css",
	"viewScript": "file:../../../../assets/js/blocks/details-view-script.js",
	"attributes": {
		"blockClass": {
			"type": "string",
			"default": ""
		},
		"style": {
			"type": "object",
			"default": {}
		},
		"isOpenOnLoad": {
			"type": "boolean",
			"default": false
		},
		"useSchema": {
			"type": "boolean",
			"default": false
		},
		"headingContent": {
			"type": "string",
			"source": "html",
			"selector": ".details__heading",
			"default": ""
		},
		"containerSchemaProp": {
			"type": "string",
			"default": "mainEntity"
		},
		"containerSchemaType": {
			"type": "string",
			"default": "https://schema.org/Question"
		},
		"headingSchemaProp": {
			"type": "string",
			"default": "name"
		},
		"contentSchemaProp": {
			"type": "string",
			"default": "acceptedAnswer"
		},
		"contentSchemaType": {
			"type": "string",
			"default": "https://schema.org/Answer"
		},
		"template": {
			"type": "array",
			"default": []
		},
		"allowedBlocks": {
			"type": "array"
		},
		"templateLock": {
			"type": ["string", "boolean"],
			"enum": ["all", "insert", false]
		},
		"isReversed": {
			"type": "boolean",
			"default": false
		},
		"variationName": {
			"type": "string",
			"default": ""
		}
	}
}
