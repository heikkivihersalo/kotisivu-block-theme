{
	"name": "kotisivu-dev/kotisivu-block-theme",
	"description": "Kotisivu Block theme",
	"type": "false",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "8.2"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"version": "1.0.0",
	"authors": [
		{
			"name": "Kotisivu Dev",
			"email": "heikki@kotisivu.dev"
		}
	],
	"autoload": {
		"psr-4": {
			"PostTypes\\": "inc/custom-post-types/"
		}
	},
	"scripts": {
		"php:lint": "./vendor/bin/phpcs",
		"php:lint --fix": "./vendor/bin/phpcbf"
	},
	"require": {
		"jjgrainger/posttypes": "^2.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.2",
		"wp-coding-standards/wpcs": "^3.1",
		"phpcompatibility/phpcompatibility-wp": "*",
		"squizlabs/php_codesniffer": "^3.10",
		"automattic/vipwpcs": "^3.0"
	}
}
